{
  "manifest_version": 3,
  "name": "Canvas Web ToolBox",
  "description": "A collection of tools goal to make life easier on Canvas",
  "version": "0.1",
  "action": {
    "default_icon": "hello_extensions.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["cumulative_gpa.js"],
      "matches": ["https://*.instructure.com/courses"]
    },
    {
      "js": ["modules_downloader.js"],
      "matches": ["https://*.instructure.com/courses/*/modules"]
    },
    {
      "js": ["files_downloader.js"],
      "matches": ["https://*.instructure.com/courses/*/files"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "activeTab", "debugger", "tabs", "cookies"],
  "host_permissions": ["https://*.canvas-user-content.com/*", "https://*.instructure.com/*"]
}
